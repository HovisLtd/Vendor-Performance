                    <i class="fa fa-cogs mg-r-sm"></i>
                    <span class="heading-font">
                        Hovis VPD
                    </span>
                </a>
            </div>
            @Html.Partial("_LoginPartial")
        </header>
        <!-- /top header -->
        <section class="layout">
            <!-- sidebar menu -->
            <aside class="sidebar collapsible canvas-left">
                <div class="scroll-menu">
                    <nav class="main-navigation slimscroll" data-height="auto" data-size="4px" data-color="#ddd" data-distance="0">
                        <ul>
                            <li class="dropdown">
                                <a href="javascript:;" data-toggle="dropdown">
                                    <span>Home</span>
                                    <i class="toggle-accordion"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("About", "About", "Home")</li>
                                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                </ul>
                            </li>
                        </ul>

                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-target="#">Dropdown trigger</a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <li><a href="#">Item</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </aside>
